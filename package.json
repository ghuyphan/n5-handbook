    "esbuild": "^0.25.6",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "fuse.js": "^7.1.0",
    "idb": "^8.0.3",
    "wanakana": "^5.3.1"
  }
}
